# ThinQShopping Platform .htaccess Configuration
# Apache URL Rewriting and Security

# Enable Rewrite Engine
RewriteEngine On
RewriteBase /ThinQShopping/

# Force HTTPS (uncomment when SSL is configured)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevent directory listing
Options -Indexes

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|sql|log|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config directory
<IfModule mod_rewrite.c>
    RewriteRule ^config/ - [F,L]
    RewriteRule ^database/ - [F,L]
    RewriteRule ^vendor/ - [F,L]
</IfModule>

# Custom error pages (create these files)
# ErrorDocument 404 /404.php
# ErrorDocument 500 /500.php

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Content Security Policy (adjust as needed)
    # Header set Content-Security-Policy "default-src 'self'"
</IfModule>

# Video MIME Types
AddType video/mp4 .mp4
AddType video/webm .webm
AddType video/ogg .ogv .ogg

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # Videos
    ExpiresByType video/mp4 "access plus 1 month"
    ExpiresByType video/webm "access plus 1 month"
    ExpiresByType video/ogg "access plus 1 month"
    
    # HTML (no cache for dynamic content)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# File Upload Limits (may need to adjust in php.ini)
php_value upload_max_filesize 10M
php_value post_max_size 10M

# PHP Settings (Development - display errors)
php_flag display_errors On
php_flag display_startup_errors On
php_flag log_errors On
php_value error_reporting E_ALL
php_value error_log logs/php_errors.log

# URL Rewriting (for clean URLs - optional)
